@using EmailReport.ViewModels
@model FileUploadViewModel

@section HeaderSection{
    <script src="~/Scripts/fileUpload.js" type="text/javascript"></script>
}
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleSection{
    Bulk Upload
}
@section ContentBody{
    <div class="right_col" role="main">
        <div id="file-uploader">
            <a href="/Report/Index">Back</a>
            <h3>Upload Newsletter Log</h3>
            <form action="/BulkUpload/Upload" method="post" enctype="multipart/form-data">
                Select File : <input type="file" name="FileUpload" value="" />
                <input type="submit" name="name" value="Upload" class="wait" onclick="show()" />
            </form>
            <h3>Upload Employee Information</h3>
            <form action="/BulkUpload/UploadEmployeeInfo" method="post" enctype="multipart/form-data">
                Select File : <input type="file" name="FileUpload" value="" />
                <input type="submit" name="name" value="Upload" class="wait" onclick="show()" />
            </form>
            <div id="div_wait" style="width:200px;height:25px;border:solid 1px red;margin-left: auto; margin-right: auto;display:none;text-align:center; ">
                Uploading...
            </div>
        </div>
    </div>
}
