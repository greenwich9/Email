@using EmailReport.ViewModels
@model FileUploadViewModel

@section HeaderSection{
    <script src="~/Scripts/fileUpload.js" type="text/javascript"></script>

    <link href="~/UI/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/UI/upload.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/UI/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Dropzone.js -->
    <link href="~/UI/vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet">
    <script src="~/UI/vendors/nprogress/nprogress.js"></script>
    <!-- Dropzone.js -->
    <script src="~/UI/vendors/dropzone/dist/min/dropzone.min.js"></script>
   <script>
       function show() {
           document.getElementById("div_wait").style.display = "";
       }
       function hide() {
           document.getElementById("div_wait").style.display = "none";
       }
      
       //Disabling autoDiscover
       $(function () {
           //Dropzone class
           Dropzone.autoDiscover = false;
           var myDropzone = new Dropzone("#dropzone1");
           myDropzone.on("uploadprogress", function () {
               //Redirect URL
               show();
               console.log('upload');
           });

      
           
           myDropzone.on("queuecomplete", function () {
               //Redirect URL
               hide();
               window.location.href = '/Report';
           });
           
       });

       $(function () {
           //Dropzone class
           var myDropzone = new Dropzone("#dropzone2");
           myDropzone.on("uploadprogress", function () {
               //Redirect URL
               show();
               console.log('upload');
           });
           myDropzone.on("queuecomplete", function () {
               //Redirect URL
               hide();
               window.location.href = '/Report';
           });
       });
 

    </script>


}
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@section TitleSection{
    Bulk Upload
}
@section ContentBody{
   <div class="right_col" role="main">

       <div class="">
           <div class="page-title">
               <div class="title_left">
                   <h3>Form Upload </h3>
               </div>

               <div class="title_right">
                   <a href="/Report/Index" class="btn btn-default pull-right">Back</a>
               </div>
           </div>

           <div class="clearfix"></div>

           <div class="row">
               <div class="col-md-12 col-sm-12 col-xs-12">
                   <div class="x_panel">
                       <div class="x_title">
                           <h3>Upload Newspaper Log</h3>
                           <div class="clearfix"></div>
                       </div>
                       <div class="x_content">
                           <form action="/BulkUpload/Upload" class="dropzone" id="dropzone1" enctype="multipart/form-data"></form>

                       </div>
                   </div>
               </div>
           </div>

           <div class="progress">
               <div class="progress-bar progress-bar-primary" role="progressbar" data-dz-uploadprogress>
                   <span class="progress-text"></span>
               </div>
           </div>
           <div class="row">
               <div class="col-md-12 col-sm-12 col-xs-12">
                   <div class="x_panel">
                       <div class="x_title">
                           <h3>Upload Employee Information</h3>
                           <div class="clearfix"></div>
                       </div>
                       <div class="x_content">
                           <form action="/BulkUpload/UploadEmployeeInfo" class="dropzone" id="dropzone2" enctype="multipart/form-data"></form>

                       </div>
                   </div>
               </div>
           </div>
       </div>
       <div class="loader" style="display:none;" id="div_wait"></div>
   </div>
}
